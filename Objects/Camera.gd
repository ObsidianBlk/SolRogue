# -------------------------------------------------------------------------
# Export Variables
# -------------------------------------------------------------------------
export var target_node_path : NodePath = ""			setget set_target_node_path

# -------------------------------------------------------------------------
# Variables
# -------------------------------------------------------------------------
var _target_node : Node2D = null

# -------------------------------------------------------------------------
# Setters / Getters
# -------------------------------------------------------------------------
func set_target_node_path(np : NodePath, force : bool = false) -> void:
	if np != target_node_path or force:
		target_node_path = np
		if target_node_path == "":
			_target_node = null
		else:
			_target_node = get_node_or_null(target_node_path)

# -------------------------------------------------------------------------
# Onready Variables
# -------------------------------------------------------------------------

# -------------------------------------------------------------------------
# Override Methods
# -------------------------------------------------------------------------
func _ready() -> void:
	set_target_node_path(target_node_path, true)

func _process(_delta : float) -> void:
	if _target_node != null:
		if _target_node.global_position != global_position:
			global_position = _target_node.global_position

